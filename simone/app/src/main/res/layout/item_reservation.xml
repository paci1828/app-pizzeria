<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="📅"
                android:textSize="32sp"
                android:gravity="center"
                android:background="?attr/colorPrimaryContainer"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reservation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martedì, 17 Luglio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/tv_reservation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confermata"
                app:chipBackgroundColor="@color/colorPrimary"
                android:textColor="@android:color/white"
                app:chipStrokeWidth="0dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginVertical="8dp" />

        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👤"
                android:textSize="20sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_reservation_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 persone"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝"
                android:textSize="20sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_reservation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mario Rossi"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Annulla"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_modify"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Modifica"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.TonalButton" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_pizza_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="🍕"
            android:textSize="40sp"
            android:gravity="center"
            android:background="?attr/colorPrimaryContainer"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pizza_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Margherita"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/tv_pizza_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pomodoro, mozzarella, basilico"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:id="@+id/layout_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_badge_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ Più amata"
                    android:textSize="12sp"
                    android:textColor="#FFA726"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_badge_vegan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegana"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="#66BB6A"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_badge_spicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌶️ Piccante"
                    android:textSize="12sp"
                    android:textColor="#FF5252"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€6.50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>